                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <HBox alignment="CENTER" spacing="80.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <ImageView fx:id="imagePersonType" fitHeight="200.0" fitWidth="200.0" />
                                                <ComboBox fx:id="cbPersonType" />
                                            </children>
                                        </VBox>

                                        <VBox alignment="CENTER" spacing="15.0">
                                            <children>
                                                <TextField promptText="Codice Fiscale">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>

                                                <TextField layoutX="10.0" layoutY="276.0" promptText="Nome">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>

                                                <TextField layoutX="10.0" layoutY="299.0" promptText="Cognome">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>

                                                <TextField layoutX="10.0" layoutY="302.0" promptText="Data di nascita">
                                                    <font>
                                                        <Font size="18.0" />
                                                        </font>
                                                </TextField>

                                                <TextField layoutX="10.0" layoutY="352.0" promptText="Indirizzo">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab fx:id="tabParents" text="Genitori">
                    <content>
                        <TableView fx:id="tableParents">
                            <columns>
                                <TableColumn fx:id="columnParentsSelected" style="-fx-alignment: center" />
                                <TableColumn fx:id="columnParentsFirstName" style="-fx-alignment: center" text="Nome" />
                                <TableColumn fx:id="columnParentsLastName" style="-fx-alignment: center" text="Cognome" />
                                <TableColumn fx:id="columnParentsFiscalCode" style="-fx-alignment: center" text="Codice fiscale" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>

                <Tab fx:id="tabPediatrist" text="Pediatra">
               <content>
                  <TableView fx:id="tablePediatrist">
                     <columns>
                        <TableColumn fx:id="columnPediatristSelected" style="-fx-alignment: center" />
                        <TableColumn fx:id="columnPediatristFirstName" style="-fx-alignment: center" text="Nome" />
                        <TableColumn fx:id="columnPediatristLastName" style="-fx-alignment: center" text="Cognome" />
                        <TableColumn fx:id="columnPediatristFiscalCode" style="-fx-alignment: center" text="Codice fiscale" />
                     </columns>
                  </TableView>
               </content>
                </Tab>

                <Tab fx:id="tabAllergies" text="Allergie">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label text="Lista delle allergie:">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox alignment="CENTER">
                                 <children>
                                    <ListView fx:id="lwAllergies" prefWidth="600.0">
                                       <VBox.margin>
                                          <Insets left="100.0" right="100.0" />
                                       </VBox.margin>
                                    </ListView>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="20.0">
                                 <children>
                                    <TextField fx:id="tfAddAllergies" promptText="Nuova allergia" />
                                    <Button fx:id="buttonAddAllergies" mnemonicParsing="false" text="Aggiungi" />
                                    <Button fx:id="buttonRemoveSelectedAllergies" mnemonicParsing="false" text="Elimina selezionati">
                                       <HBox.margin>
                                          <Insets left="150.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                              <Label fx:id="labelErrorAllergies" textFill="RED" underline="true">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="400.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children></AnchorPane>
                    </content>
                </Tab>

                <Tab fx:id="tabIntollerances" text="Intolleranze">
                    <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label text="Lista delle intolleranze:">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox alignment="CENTER">
                                 <children>
                                    <ListView fx:id="lwIntollerances" prefWidth="600.0">
                                       <VBox.margin>
                                          <Insets left="100.0" right="100.0" />
                                       </VBox.margin>
                                    </ListView>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="20.0">
                                 <children>
                                    <TextField fx:id="tfAddIntollerances" promptText="Nuova intolleranza" />
                                    <Button fx:id="buttonAddIntollerances" mnemonicParsing="false" text="Aggiungi" />
                                    <Button fx:id="buttonRemoveSelectedIntollerances" mnemonicParsing="false" text="Elimina selezionati">
                                       <HBox.margin>
                                          <Insets left="150.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                              <Label fx:id="labelErrorIntollerances" textFill="RED" underline="true">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="400.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
                    </content>
                </Tab>

                <Tab fx:id="tabContacts" text="Contatti">
               <content>
                  <TableView fx:id="tableContacts">
                     <columns>
                        <TableColumn fx:id="columnContactsSelected" style="-fx-alignment: center" />
                        <TableColumn fx:id="columnContactsFirstName" style="-fx-alignment: center" text="Nome" />
                        <TableColumn fx:id="columnContactsLastName" style="-fx-alignment: center" text="Cognome" />
                        <TableColumn fx:id="columnContactsFiscalCode" style="-fx-alignment: center" text="Codice fiscale" />
                     </columns>
                  </TableView>
               </content>
                </Tab>

                <Tab fx:id="tabLoginData" text="Dati di accesso">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
         </tabs>
      </TabPane>
   </children>
</AnchorPane>
