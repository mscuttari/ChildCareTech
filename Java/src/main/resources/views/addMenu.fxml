<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="addMenuPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.client.controllers.AddMenuController">
   <children>
      <HBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ImageView fitHeight="200.0" fitWidth="200.0">
                     <image>
                        <Image url="@../images/menu(addMenu).png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </ImageView>
                  <TextField fx:id="tfMenuName" promptText="Nome">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="tfMenuType" promptText="Tipo">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
            <TableView fx:id="tableFood" layoutX="290.0" layoutY="10.0" prefWidth="300.0">
               <columns>
                  <TableColumn fx:id="columnFoodSelected" style="-fx-alignment: center" />
                  <TableColumn fx:id="columnFoodName" style="-fx-alignment: center" text="Nome" />
                  <TableColumn fx:id="columnFoodType" style="-fx-alignment: center" text="Tipo" />
               </columns>
            </TableView>
            <TableView fx:id="tableStaff">
               <columns>
                  <TableColumn fx:id="columnStaffSelected" style="-fx-alignment: center" />
                  <TableColumn fx:id="columnStaffFirstName" style="-fx-alignment: center" text="Nome" />
                  <TableColumn fx:id="columnStaffLastName" style="-fx-alignment: center" text="Cognome" />
                  <TableColumn fx:id="columnStaffFiscalCode" prefWidth="130.0" style="-fx-alignment: center" text="Codice fiscale" />
               </columns>
            </TableView>
         </children>
      </HBox>
      <ImageView fx:id="addMenuImage" fitHeight="60.0" fitWidth="60.0" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="110.0">
         <image>
            <Image url="@../images/save-data.png" />
         </image>
      </ImageView>
      <ImageView fx:id="goBackImage" fitHeight="60.0" fitWidth="60.0" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="30.0">
         <image>
            <Image url="@../images/goBack(red).png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
